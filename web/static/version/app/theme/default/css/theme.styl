/*******************************************************************
 ** variables
 *******************************************************************/

    $dark = #242A36
    $light = #fff
    $blue = #0D70AC
    $green = #008C83
    $darkGray = #454545
    $lightGray = #EBECEE
    $shadow = #999
    $genericGroupColor = #0D70AC
    $primaryGroupColor = #008C83
    $secondaryGroupColor = #FFCD1C
    $tertiaryGroupColor = #61CEE9
    $searchGroupColor = #59B9FF
    $detailsGroupColor = #C156FF

    $bodyBkgColor = $light

    $appHeaderBkgColor = $dark
    $appHeaderTextColor = $light

    $appContentBkgColor = $light

    $appTabBkgColor = $dark
    $appTabsBorderColor = $darkGray
    $appTabTxtColor = $light
    $appTabIndicatorColorOff = $light
    $appTabIndicatorColorOn = $blue

    $appTitleBkgColor = $blue
    $appTitleTxtColor = $light

    $appMenuHeadderBkgColor = $green
    $appMenuHeadderTxtColor = $light
    $appMenuHeadderBorderColor = $lightGray

    $appMenuSectionBkgColor = $green
    $appMenuSectionTxtColor = $light
    $appMenuSectionBorderColor = $darkGray

    $appMenuItemBkgColor = $green
    $appMenuItemTxtColor = $darkGray
    $appMenuItemBorderColor = $darkGray

    $paneBkgColor = $light
    $paneBorderColor = $darkGray
    $boxShadow = $shadow

    $groupBkgColor = $light

    $defaultGroupBannerColor = $genericGroupColor
    $primaryGroupBannerColor = $primaryGroupColor
    $secondaryGroupBannerColor = $secondaryGroupColor
    $tertiaryGroupBannerColor = $tertiaryGroupColor
    $searchGroupBannerColor = $searchGroupColor
    $detailsGroupBannerColor = $detailsGroupColor

    $defaultGroupBanneTxtColor = $light
    $primaryGroupBannerTxtColor = $light
    $secondaryGroupBannerTxtColor = $light
    $tertiaryGroupBannerTxtColor = $light
    $searchGroupBannerTxtColor = $light
    $detailsGroupBannerTxtColor = $light



/*******************************************************************
 ** root
 *******************************************************************/

html
{
    font-size: 62.5%; /* 10px */
    line-height: 1.2;
}

body
{
    overflow: hidden;
    font-size: 1.3rem;
    background-color: $bodyBkgColor;
}


/*******************************************************************
 ** environment
 **
 ** These styles are applied to the top level 'body' element
 ** in the Stage and Production environments.  This allows other
 ** styles to be modified.
 *******************************************************************/

/* Attached to BODY element in the staging environment. */
.environmentStage
{
    content: normal; /* Stylus Compression Hack */
}

/* Attached to BODY element in the production environment. */
.environmentProduction
{
    content: normal; /* Stylus Compression Hack */
}

/*******************************************************************
 ** layout :: app header
 **
 ** This header is displayed at the top of the web page.  It is
 ** always displayed and includes global elements such as the
 ** application name, logo, and user.
 *******************************************************************/

/**
 * The unique ID for the header box.
 * Used by javascript.
 */
#appHeader
{
    content: normal; /* Stylus Compression Hack */
}

.appHeader-normal,
.appHeader-bare
{
    box-sizing: border-box;

    position: absolute;
    left:   0;
    right:  0;
    top:    0;
    height: 50px;

    display: flex;
    align-items: center;
    white-space: nowrap;

    overflow: visible;
    background-color: $appHeaderBkgColor;
}

.environmentStage .appHeader-normal,
.environmentStage .appHeader-bare
{
    background-image: linear-gradient(to bottom, #00f, #f8f8f8);
}

.environmentProduction .appHeader-normal,
.environmentProduction .appHeader-bare
{
    background-image: linear-gradient(to bottom, #f00, #f8f8f8);
}


/* the left side of the header; contains the app logo and title */
.appHeader-left
{
    padding-top: 5px;
    flex-grow: 1;
}

.appHeaderLink
{
    content: normal; /* Stylus Compression Hack */
}

.appHeaderLogoImage
{
    padding: 0 5px;
}

.appHeaderLogoText
{
    color: $appHeaderTextColor;
    font: italic bold 3rem sans-serif;
    display: inline-block;
    vertical-align: top;
}

/* the right side of the header; contains the project and user dropdown menus */
.appHeader-right
{
    flex-shrink: 0;
}
.appHeader-right > *
{
    margin-right: 5px;
}

.appHeader-bare > .appHeader-right
{
    display: none;
}

/*******************************************************************
 ** layout :: page footer
 **
 ** The footer is displayed at the bottom of all pages,
 ** and contains basic global information such as the copyright
 ** notice.
 *******************************************************************/

/**
 * The unique ID for the footer box.
 * Used by javascript.
 */
#appFooter
{
    content: normal; /* Stylus Compression Hack */
}

.appFooter-normal
{
    box-sizing: border-box;

    position:   absolute;
    left:       0;
    right:      0;
    bottom:     0;
    height:     30px;
}

.appFooter-bare
{
    box-sizing: border-box;

    position:   absolute;
    left:       0;
    right:      0;
    bottom:     0;
    height:     30px;
}

.appFooterInner
{
    vertical-align: middle;
    text-align: center;
    color: #444;
    font: normal 1.2rem sans-serif;
    padding-top: 8px;
}

/*******************************************************************
 ** layout :: top level TAB navigation
 *******************************************************************/

/**
 * The unique ID for the tabs navigation box.
 * Used by javascript.
 */
#appTabs
{
    content: normal; /* Stylus Compression Hack */
}

/**
 * I am the wrapper around the top level tab navigation.
 * The other appTab... styles are nested inside of me.
 */
.appTabs
{
    box-sizing:         border-box;
    position:           absolute;
    left:               0px;
    width:              170px;
    top:                50px;
    bottom:             30px;

    display:            flex;
    flex-direction:     column;
    align-items:        stretch;

    overflow:           hidden;
    border-bottom:      1px solid $appTabsBorderColor;
    background-color:   $appTabBkgColor;
}

.appTabsPrefix
{
    box-sizing:       border-box;
    height:           40px;
    background-color: $appTabBkgColor;

    flex-grow:   0;
    flex-shrink: 0;
}

.appTabsSuffix
{
    box-sizing: border-box;
    height: 38px;
    border: 1px outset $appTabsBorderColor;
    border-right: none;
    background-color: $appTabBkgColor;

    flex-grow: 1;
}

.appTabsItem
{
    box-sizing: border-box;
    height: 38px;
    flex-grow:   0;
    flex-shrink: 0;

    border: 1px solid $appTabsBorderColor;
    border-right-width: 10px;
    border-right-color: $appTabIndicatorColorOff;
    background-color: $appTabBkgColor;

    padding: 7px 15px 0 15px;
    font:   bold 1.8rem sans-serif;
    color:  $appTabTxtColor;
    cursor: pointer;

}

.appTabsItem:hover
{
    text-decoration:  underline;
}

.appTabsSelected
{
    box-sizing: border-box;
    height: 38px;
    flex-grow:   0;
    flex-shrink: 0;

    border: 1px solid $appTabsBorderColor;
    border-right-width: 10px;
    border-right-color: $appTabIndicatorColorOn;
    background-color: $appTabBkgColor;

    padding: 7px 15px 0 15px;
    font:   bold 1.8rem sans-serif;
    color:  $appTabTxtColor;
    cursor: pointer;

}

.appTabsSelected:hover
{
    text-decoration: underline;
}

.appTabsSelected > span
{
}

/*******************************************************************
 ** layout :: top level MENU sub-navigation
 *******************************************************************/

/**
 * The unique ID for the menu box.
 * Used by javascript.
 */
#appMenu
{
    content: normal; /* Stylus Compression Hack */
}

.appMenu
{
    box-sizing: border-box;

    position: absolute;
    left:   170px;
    width:  150px;
    top:    90px;
    bottom: 30px;

    overflow-y: auto;
    overflow-x: hidden;

    margin-top: 40px;
    background-color: $paneBkgColor;

    margin: 20px 0px 20px 20px;
    border: 1px solid $paneBorderColor;
    box-shadow: 6px 6px 10px $boxShadow;
}

.appMenu-section
{
    cursor: normal;
    white-space: nowrap;
    word-break: keep-all;

    font: bold 1.5rem sans-serif;
    color: $appMenuSectionTxtColor;

    padding: 5px;
    background-color: $appMenuSectionBkgColor;
}

.appMenu-item
{
    color:  #874B46;
    font: bold 1.5rem sans-serif;
    white-space: nowrap;

    cursor: pointer;
    padding: 3px 10px;
    margin:  3px 0 3px 10px;

    border: 2px solid transparent;
    border-right: none;
    border-radius: 15px 0 0 15px;
}

.appMenu-item:hover
{
    text-decoration: underline;
    border-color: #888;
}

.appMenu-selection
{
    font: bold 1.5rem sans-serif;
    color: #fff;
    background-color: #366;
    background-image: radial-gradient(ellipse at 35px 15px, #588 0px, #366 40px);

    padding: 4px 10px;
    margin:  3px 0 3px 10px;

    border: 1px outset #fff;
    border-right: none;
    border-radius: 15px 0 0 15px;

    cursor: pointer;
    white-space: nowrap;
}

.appMenu-selection:hover
{
    text-decoration: underline;
}

.appMenu-selection > span
{
    content: normal; /* Stylus Compression Hack */
}

/*******************************************************************
 ** app title
 *******************************************************************/

/**
 * The unique ID for the page title box.
 * Used by javascript.
 */
#appTitle
{
    content: normal; /* Stylus Compression Hack */
}

.appTitle-bare
{
    display: flex;
}

.appTitle-simple
{
    box-sizing: border-box;

    position: absolute;
    left:   170px;
    right:  0px;
    top:    50px;
    height: 40px;

    display: flex;
    align-items: center;

    overflow: hidden;
    background-color: $appTitleBkgColor;
}

.appTitle-nested
{
    box-sizing: border-box;

    position: absolute;
    left:   170px;
    right:  0;
    top:    50px;
    height: 40px;

    display: flex;
    align-items: center;

    overflow: hidden;

    background-color: $appTitleBkgColor;
}

.appTitle-left
{
    flex-grow: 1;
    padding-left: 10px;
}

.appTitle-right
{
    flex-shrink: 0;
    padding-right: 10px;
}

.appTitle-nameText
{
    color: $appTitleTxtColor;
    font: bold 2.2rem sans-serif;
    white-space: nowrap;
}

.appTitle-projectText
{
    color: #ddd;
    font: normal 1.6rem sans-serif;
    white-space: nowrap;
    margin-left: 10px;
}

.appTitle-link
{
    color: #eee;
    font: normal 1.2rem sans-serif;
    white-space: nowrap;
    vertical-align: middle;
    margin-right: 5px;
    text-decoration: none;
}
.appTitle-link:hover
{
    text-decoration: underline;
}

.appTitle-help
{
    box-sizing: border-box;

    cursor: pointer;
    vertical-align: middle;

    background:   url(pageHelp.png) no-repeat;
    height:       16px;
    width:        16px;
    padding-left: 16px; /* equal to width */
}

/*******************************************************************
 ** page content
 *******************************************************************/

/**
 * The unique ID for the page content box.
 * Used by javascript.
 */
#appContent
{
    /* default value to ensure style is not stripped by Stylus */
    content: normal;
}

.appContent-bare
{
    position: absolute;
    left:   0;
    right:  0;
    top:    50px;
    bottom: 30px;
    height: auto;

    overflow: hidden;
}

.appContent-simple
{
    position: absolute;
    left:   170px;
    right:  0px;
    top:    90px;
    bottom: 30px;

    overflow: hidden;
    background-color: $appContentBkgColor;

    border-top: none;
    border-radius: 0 0 15px 15px;
}

.appContent-nested
{
    position: absolute;
    left:   340px;
    right:  0px;
    top:    90px;
    bottom: 30px;

    overflow: hidden;
    background-color: $appContentBkgColor;

    border-top: none;
    margin: 20px;
    box-shadow: 6px 6px 10px $boxShadow;
}

#appContentInner
{
    content: normal; /* Stylus Compression Hack */
}

.appContentInner
{
    position: absolute;
    left:   0;
    right:  0;
    top:    0;
    bottom: 0;

    overflow: auto;
}

/*******************************************************************
 ** form area
 *******************************************************************/

.formFilter
{
    /*
     * The section that contains the filter,
     * as well as the refresh and add buttons.
     */

    box-sizing: border-box;
    height: 50px;

    background-color: #eed;
    border: 1px outset #fff;
}

.formBanner
{
    /*
     * The top section used to display a selected value.
     * This contains the title and subtitle text, and the edit button(s).
     */

    box-sizing: border-box;
    height: 50px;

    display: flex;
    align-items: center;

    background-color: #bdc;
    background-image: linear-gradient(to bottom, #ced, #bdc);
    border: 1px outset #fff;
}

.formTitle
{
    /* The title text, displayed inside the banner. */
    font: bold 1.6rem sans-serif;
}

.formSubtitle
{
    /* The subtitle text, displayed inside the banner. */
    font: italic 1.2rem sans-serif;
}

.formHeader
{
    /* Displayed below the banner, contains the save/cancel buttons. */

    box-sizing: border-box;
    height: 50px;

    display: flex;
    align-items: center;

    background-color: #eed;
    border: 1px outset #fff;
}

.formHeaderText
{
    /* Text displayed inside the banner. */
    font: italic 1.8rem sans-serif;
}

.formFooter
{
    /* Displayed at the bottom, repeats the save/cancel buttons. */

    box-sizing: border-box;
    height: 50px;

    display: flex;
    align-items: center;

    background-color: #eed;
    border: 1px outset #fff;
}

.formBody
{
    /* The main center section where fields are displayed and edited. */

    border: 1px outset #fff;
    background-color: #ffe;
}

.formBodyWarning
{
    /* The main center section where fields are displayed and edited. */
    background-color: #fee;
    border: 1px outset #fff;
}

.formSectionLeft
{
    flex-grow:   1;
    flex-shrink: 1;

    white-space: nowrap;
    overflow: hidden;
    padding: 10px;
}

.formSectionRight
{
    flex-grow:   0;
    flex-shrink: 0;

    white-space: nowrap;
    overflow: hidden;
    padding: 10px;
}

.formEmpty
{
    background-color: #ffe;
    font: normal 1.4rem sans-serif;
    padding: 10px;
}

.formHelp
{
    box-sizing: border-box;

    height:       11px;
    width:        11px;
    padding-left: 11px; /* equal to width */

    cursor: help;
    vertical-align: middle;
    background:     url(fieldHelp11.png) no-repeat;
}

/*******************************************************************
 ** text field
 *******************************************************************/

.textField
{
    margin: 0;
    padding: 5px;
    font: normal 1.5rem sans-serif;
    background-color: #fff;

    border-top:    1px solid #999;
    border-left:   1px solid #999;
    border-bottom: 1px solid #bbb;
    border-right:  1px solid #bbb;

    transition: border 100ms;
}

.textField:hover
{
    box-shadow: inset 1px 1px 1px rgba(0, 0, 0, 0.2);
}

.textField:focus
{
    background-color: #fff;
    border: 1px solid #48f;
    box-shadow: inset 1px 1px 1px rgba(0, 0, 0, 0.2);
}

/*
 * Used to wrap the field when the field's width is 100%.
 * This value should equal the sum of the element's left
 * and right padding, margin, and border.
 */
.textFieldWrapper
{
    padding-right: 12px;
}

/*******************************************************************
 ** text field (readonly)
 *******************************************************************/

.textFieldReadOnly
{
    margin: 0;
    padding: 5px;
    font: normal 1.5rem sans-serif;
    background-color: #ccc;

    border-top:    1px solid #999;
    border-left:   1px solid #999;
    border-bottom: 1px solid #bbb;
    border-right:  1px solid #bbb;

    -moz-transition:    border 200ms;
    -webkit-transition: border 200ms;
    transition:         border 200ms;
}

.textFieldReadOnly:hover
{
    box-shadow:         inset 1px 1px 1px rgba(0, 0, 0, 0.2);
}

.textFieldReadOnly:focus
{
    border: 1px solid #48f;

    box-shadow:         inset 1px 1px 1px rgba(0, 0, 0, 0.2);
}

/*******************************************************************
 ** dropdown
 *******************************************************************/

.dropdown
{
    margin: 0;
    padding: 3px;
    font: normal 1.5rem sans-serif;
    background-color: #fff;

    border-top:    1px solid #999;
    border-left:   1px solid #999;
    border-bottom: 1px solid #bbb;
    border-right:  1px solid #bbb;

    -moz-transition:    border 200ms;
    -webkit-transition: border 200ms;
    transition:         border 200ms;
}

.dropdown:hover
{
    box-shadow:         inset 1px 1px 1px rgba(0, 0, 0, 0.2);
}

.dropdown:focus
{
    border: 1px solid #48f;
    background-color: #fff;

    box-shadow:         inset 1px 1px 1px rgba(0, 0, 0, 0.2);
}

/*******************************************************************
 ** other fields
 *******************************************************************/

.radio
{
    padding: 0;
    margin: 0;
}

.checkbox
{
    padding: 0;
    margin: 0;
}

.listBox
{
    content: normal; /* Stylus Compression Hack */
}

.choiceFieldFocus
{
    box-shadow: 0 0 1px 1px #7294CB;
    border-radius: 4px;
    padding-right: 4px;
}

/*******************************************************************
 ** link
 *******************************************************************/

.link
{
    font: normal 1.3rem sans-serif;
    color: #000;
}

.link:hover
{
    color: #00f;
    cursor: pointer;
}

.linkBox      { padding: 10px  5px  5px 10px }
.linkBox > *  { margin:   0px  5px  5px  0px }

.lineBox      { padding: 10px  5px  5px 10px }
.lineBox > *  { margin:   0px  5px  5px  0px }

/*******************************************************************
 ** field set
 *******************************************************************/

.fieldset-legend-default
{
    font: bold 1.4rem sans-serif;
    padding: 2px 14px;
    background-color: #ddc;
    border: 2px groove #fff;
    border-radius: 10px;
}

.fieldset-body-default
{
    background-color: #eed;
    border: 2px groove #fff;
}


