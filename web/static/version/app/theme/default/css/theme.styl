    overflow: hidden;
    background-color: $groupBkgColor;
}
.group > *
{
    border-bottom: 1px solid #aaa;
    border-right:  1px solid #aaa;
}

.groupBlock
{
    display: flex;
    flex-direction: column;
}

.groupInline
{
    display: inline-flex;
    flex-direction: column;
}

.groupBanner
{
    flex-grow:   0;
    flex-shrink: 0;
    overflow: hidden;

    font: bold 2.0rem sans-serif;

/**   background-color: #ccc;  **/
