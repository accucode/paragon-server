    flex-shrink: 0;
    overflow: hidden;
}

.groupBody
{
    flex-grow:   1;
    flex-shrink: 1;
}

.groupFooter
{
    flex-grow:   0;
    flex-shrink: 0;
    overflow: hidden;
}

.groupDivider
{
