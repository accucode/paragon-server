/*******************************************************************
 ** title panel
 *******************************************************************/

.titlePanelHeader
{
    overflow: hidden;
}

.titlePanelText
{
    padding: 5px;
    font: bold 2rem sans-serif;
}

/**
 * The center portion must be explicitly sized, and the top must be set such that
 * it lays out just below the header.  You must manually account for any padding
 * margins, borders, and fonts used in the .titlePanelHeader and .titlePanelText.
 */
.titlePanelBody
{
    position: absolute;
    left:  0;
    right: 0;
    bottom: 0;
    top:   38px;
    overflow: auto;
}

/*******************************************************************
 ** position
 *******************************************************************/

.offset
{
    left:   10px;
    right:  10px;
    top:    10px;
    bottom: 10px;
}

.leftOffset     { left:   10px }
.rightOffset    { right:  10px }
.topOffset      { top:    10px }
.bottomOffset   { bottom: 10px }


/*******************************************************************
 ** model list
 *******************************************************************/

.modelList
{
    position: absolute;
    left:   0;
    right:  0;
    width:  auto;
    top:    0;
    bottom: 0;
    height: auto;

    overflow-x: hidden;
    overflow-y: scroll;

    background-color: #aaa;
    background-image: url("bgLightTexture.png");
}

.modelList-item
{
    box-sizing: border-box;
    height: 50px;

    display: flex;
    align-items: center;

    cursor: pointer;
    border: 1px outset #fff;
    background-color: #eee;
    background-image: linear-gradient(to bottom, #eee, #ddd);
}
.modelList-item:hover
{
    background-color: #ddd;
    background-image: linear-gradient(to bottom, #ddd, #ccc);
}
.modelList-item:first-child
{
    border-top: none;
}

.modelList-itemSelected
{
    background-color: #bdc;
    background-image: linear-gradient(to bottom, #ced, #bdc);
}
.modelList-itemSelected:hover
{
    background-color: #acb;
    background-image: linear-gradient(to bottom, #bdc, #acb);
}

.modelList-itemLeftBox
{
    flex-grow: 1;
    overflow: hidden;
    padding-left: 5px;
}

.modelList-itemRightBox
{
    flex-shrink: 0;
    padding: 5px;
    /* visibility: hidden; */
}
.modelList-item:hover .modelList-itemRightBox
{
    visibility: visible;
}

.modelList-itemTitle
{
    font: bold 1.6rem sans-serif;
    white-space: nowrap;
}

.modelList-itemSubtitle
{
    font: italic 1.2rem sans-serif;
    white-space: nowrap;
}

/*******************************************************************
 ** dragging
 *******************************************************************/

.dragHandle
{
    box-sizing: border-box;
    width:   15px;
    height:  16px;

    cursor: move;
    display: inline-block;
    background: transparent url("drag.png") no-repeat center;
    border: 1px solid transparent;
}

/*******************************************************************
 ** draggable multi select
 **
 ** These styles are tied to the ScDraggableMultiSelect widget.
 ** Also, javascript in Kmu.dmsToggle() relies on these selectors.
 *******************************************************************/

.dmsContainer
{
    overflow: hidden;
}

.dmsSelectedHeader
{
    box-sizing: border-box;
    position:   absolute;
    left:       0;
    width:      50%;
    top:        0;
    height:     30px;

    border: 1px outset #fff;
    background-color: #eed;
    font: bold 1.5rem sans-serif;
    padding: 5px;
    overflow: hidden;
}

.dmsAvailableHeader
{
    box-sizing: border-box;
    position:   absolute;
    left:       50%;
    right:      0;
    top:        0;
    height:     30px;

    border: 1px outset #fff;
    background-color: #eed;
    font: bold 1.5rem sans-serif;
    padding: 5px;
    overflow: hidden;
}

.dmsSelectedList
{
    box-sizing: border-box;
    position:   absolute;
    left:       0;
    width:      50%;
    top:        30px;
    bottom:     0;

    overflow-x: hidden;
    overflow-y: scroll;

    border: 1px outset #fff;
    background-color: #aaa;
    background-image: url("bgLightTexture.png");
}

.dmsAvailableList
{
    box-sizing: border-box;
    position:   absolute;
    left:       50%;
    right:      0;
    top:        30px;
    bottom:     0;

    overflow-x: hidden;
    overflow-y: scroll;

    border: 1px outset #fff;
    background-color: #aaa;
    background-image: url("bgLightTexture.png");
}

.dmsItem
{
    display:     flex;
    align-items: center;

    padding: 5px;
    border: 1px outset #fff;
    background-color: #eee;
    background-image: linear-gradient(to bottom, #eee, #ddd);
}
.dmsItem:first-child
{
    border-top: none;
}
.dmsItem:hover
{
    background-color: #ddd;
    background-image: linear-gradient(to bottom, #ddd, #ccc);
}

.dmsSelectedList .dmsItemHandle
{
    flex-grow:   0;
    flex-shrink: 0;

    box-sizing: border-box;
    width:   15px;
    height:  16px;

    cursor: move;
    display: inline-block;
    background: transparent url("drag.png") no-repeat center;
}
.dmsAvailableList .dmsItemHandle
{
    display: none;
}

.dmsSelectedList .dmsItemPriority
{
    flex-grow:   0;
    flex-shrink: 0;

    box-sizing: border-box;
    width: 20px;
    margin-left: 5px;
    font: bold 1.4rem sans-serif;
    padding-bottom: 4px;
}
.dmsAvailableList .dmsItemPriority
{
    display: none;
}

.dmsItemText
{
    flex-grow:   1;
    flex-shrink: 1;
    margin-left: 5px;
    font: normal 1.4rem sans-serif;
    padding-bottom: 2px;
}

.dmsItemToggle
{
    flex-grow:   0;
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    border: 1px outset #fff;
    cursor: pointer;
}
.dmsSelectedList .dmsItemToggle
{
    background: transparent url("dmsRemove.png") no-repeat center;
}
.dmsAvailableList .dmsItemToggle
{
    background: transparent url("dmsAdd.png") no-repeat center;
}

.dmsItemField
{
    content: normal; /* Stylus Compression Hack */
}

/*******************************************************************
