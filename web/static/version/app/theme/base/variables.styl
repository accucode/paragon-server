$formFilterLineSelectionColor           = #242A36

//******************************
//** field
//******************************

$fieldBackgroundColor                   = #fff


//******************************
//** fieldset
//******************************

$fieldset-legendFont                    = normal 1.6rem $fontFamily
$fieldset-legendPadding                 = 2px 14px

$fieldset-legendColor                   = #ffffff
