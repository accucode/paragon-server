//******************************
//** group
//******************************

$group-shadow                           = 4px 4px 4px rgba(0, 0, 0, 0.2)

$group-titleFont                        = bold 2.0rem $fontFamily
$group-titlePadding                     = 0px 10px

$group-borderStyle                      = solid
$group-borderSize                       = 2px
