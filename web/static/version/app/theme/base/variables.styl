$group-normal-footerColor               = #000
$group-normal-footerBackground          = lighten($group-normal-bannerBackground, $groupFade)

$group-normal-borderColor               = $group-normal-bannerBackground

//------------------------------
//-- group :: primary
//------------------------------

$group-primary-bannerColor              = #fff
$group-primary-bannerBackground         = #1b7

$group-primary-headerColor              = #000
$group-primary-headerBackground         = lighten($group-primary-bannerBackground, $groupFade)

$group-primary-bodyColor                = #000
$group-primary-bodyBackground           = lighten($group-primary-bannerBackground, $groupFade)

$group-primary-footerColor              = #000
$group-primary-footerBackground         = lighten($group-primary-bannerBackground, $groupFade)

