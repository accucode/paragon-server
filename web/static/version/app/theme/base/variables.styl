$menu-topColor                          = #fff
$menu-topPadding                        = 5px 10px

$menu-subFont                           = italic 1.6rem $fontFamily
$menu-subColor                          = #000
$menu-subWidth                          = 150px
$menu-subPadding                        = 5px 10px
