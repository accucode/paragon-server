/*******************************************************************
 * Theme: base
 *
 * The general structure of the css is shared in stylus files
 * that are common to all themes. This file specifies various
 * variables and overrides specific css as needed.
 *******************************************************************/

//******************************
//** general
//******************************

$fontFamily                             = roboto, sans-serif

$shadowColor                            = rgba(0, 0, 0, 0.2)
$shadowColor-dark                       = rgba(0, 0, 0, 0.4)

$shadow                                 = 4px 4px 4px $shadowColor
$shadow-dark                            = 4px 4px 4px $shadowColor-dark

//******************************
//** html
//******************************

$body-font                              = normal 1.4rem $fontFamily
$body-color                             = #000000
$body-background                        = #ffffff

//******************************
//** header
//******************************

$header-height                          = 50px

$header-background                      = #000
$header-productionBackground            = #f00
$header-stageBackground                 = #00f

$header-logoFont                        = italic bold 3rem $fontFamily
$header-logoColor                       = #fff

$header-projectFont                     = bold 2.0rem $fontFamily
$header-projectColor                    = #fff

$header-depotFont                       = bold 2.0rem $fontFamily
$header-depotColor                      = #fff

$header-timeFont                        = bold 2.0rem $fontFamily
$header-timeColor                       = #fff

$header-timeZoneFont                    = bold 2.0rem $fontFamily
$header-timeZoneColor                   = yellow

$header-taskFont                        = bold 2.0rem $fontFamily
$header-taskColor                       = #fff

$header-userFont                        = bold 2.0rem $fontFamily
$header-userColor                       = #fff


//******************************
//** title
//******************************

$title-height                           = 40px
$title-background                       = #FFFFFF
$title-nameColor                        = #0D70AC
$title-nameFont                         = bold 2.2rem $fontFamily

//******************************
//** footer
//******************************

$footer-height                          = 20px
$footer-font                            = normal 1.1rem $fontFamily
$footer-color                           = rgba(0, 0, 0, 0.6)
$footer-background                      = transparent
$footer-border                          = none
$footer-padding                         = 5px

//******************************
//** content
//******************************

$content-background                     = #FFFFFF
$content-leftMargin                     = 20px
