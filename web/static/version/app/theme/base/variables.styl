//******************************
//** button
//******************************

$button-height                          = 30px
$button-minimumWidth                    = 30px
$button-padding                         = 3px 7px
$button-radius                          = 3px

$button-font                            = normal 1.6rem $fontFamily
$button-primaryFont                     = bold   1.6rem $fontFamily

$button-textTransform                   = none
$button-textTransform-hover             = ()
$button-textTransform-active            = ()

$button-shadow                          = 2px 2px 2px $shadowColor
$button-shadow-hover                    = 2px 2px 2px $shadowColor-dark
$button-shadow-active                   = $button-shadow-hover

$button-imageMargin                     = 0px 2px -3px 1px
$button-imageWidth                      = 16px
$button-imageHeight                     = 16px
$button-imagePadding                    = 0px

$button-focusOutline                    = 1px dotted rgba(0, 0, 255, 0.2)
$button-focusOutlineOffset              = -4px

//------------------------------
//-- button :: normal
//------------------------------

$tempColor = #ddd
$tempLight = lighten($tempColor, 10)
$tempDark  = darken($tempColor,  10)

$button-normalColor                     = #369
$button-normalBackground                = linear-gradient(to bottom, $tempLight 0%, $tempColor 100%)
$button-normalBorder                    = 1px solid $tempDark

$button-normalColor-hover               = ()
$button-normalBackground-hover          = ()
$button-normalBorder-hover              = ()

$button-normalColor-active              = ()
$button-normalBackground-active         = linear-gradient(to bottom, $tempColor 0%, $tempLight 100%)
$button-normalBorder-active             = ()

//------------------------------
//-- button :: positive
//------------------------------

$tempColor = #5b7
$tempLight = lighten($tempColor, 10)
$tempDark  = darken($tempColor,  10)

$button-positiveColor                   = #fff
$button-positiveBackground              = linear-gradient(to bottom, $tempLight 0%, $tempColor 100%)
$button-positiveBorder                  = 1px solid $tempDark

$button-positiveColor-hover             = ()
$button-positiveBackground-hover        = ()
$button-positiveBorder-hover            = ()

$button-positiveColor-active            = ()
$button-positiveBackground-active       = linear-gradient(to bottom, $tempColor 0%, $tempLight 100%)
$button-positiveBorder-active           = ()

//------------------------------
//-- button :: negative
//------------------------------

$tempColor = #e91
$tempLight = lighten($tempColor, 10)
$tempDark  = darken($tempColor,  10)

$button-negativeColor                   = #fff
$button-negativeBackground              = linear-gradient(to bottom, $tempLight 0%, $tempColor 100%)
$button-negativeBorder                  = 1px solid $tempDark

$button-negativeColor-hover             = ()
$button-negativeBackground-hover        = ()
$button-negativeBorder-hover            = ()

$button-negativeColor-active            = ()
$button-negativeBackground-active       = linear-gradient(to bottom, $tempColor 0%, $tempLight 100%)
$button-negativeBorder-active           = ()

//------------------------------
//-- button :: delete
//------------------------------

$tempColor = #e00
$tempLight = lighten($tempColor, 10)
$tempDark  = darken($tempColor,  10)

$button-deleteColor                     = #fff
$button-deleteBackground                = linear-gradient(to bottom, $tempLight 0%, $tempColor 100%)
$button-deleteBorder                    = 1px solid $tempDark

$button-deleteColor-hover               = ()
$button-deleteBackground-hover          = ()
$button-deleteBorder-hover              = ()

$button-deleteColor-active              = ()
$button-deleteBackground-active         = linear-gradient(to bottom, $tempColor 0%, $tempLight 100%)
$button-deleteBorder-active             = ()

//------------------------------
//-- button :: icon
//------------------------------

$tempColor = rgba(208, 208, 208, 0.2)
$tempLight = lighten($tempColor, 20)
