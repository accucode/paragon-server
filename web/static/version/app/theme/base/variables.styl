//******************************
//** form filter
//******************************

$formFilterLineTextColor                = #fff
$formFilterLineBackgroundColor          = #f8f8f8
$formFilterLineBorderColor              = #EBECEE

$formFilterIndicatorColorOn             = #fc2
$formFilterIndicatorColorOff            = #088
