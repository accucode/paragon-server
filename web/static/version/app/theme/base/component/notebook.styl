/*****************************
 ** notebook
 *****************************/

.notebookTabFlexFill
{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.notebookTabContentFlexFill
{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    padding-top: 0px;
}

.tabGroup
{
    background-color: #CF9958;
    border: 1px solid #000000;
    padding-top: 5px;
    border-bottom: 1px solid #000000;
}

.tabBody
{
    background-color: #E3DFD6;
    border: 1px solid #000000;
    border-top: none;
    padding: 10px;
}

a.tab
{
    color: #000000;
    padding: 3px 3px 3px 3px;
    background-color: #C5C1B8;
    border: 1px solid #000000;
    border-bottom: 0px;
    margin: 0px 5px 0px 0px;
    text-decoration: none;

    -moz-border-radius-topleft:         5px;
    -moz-border-radius-topright:        5px;
    -webkit-border-top-left-radius:     5px;
    -webkit-border-top-right-radius:    5px;
    border-top-left-radius:             5px;
    border-top-right-radius:            5px;
}

a.tabx
{
    color: #000000;
    padding: 8px 6px 4px 6px;
    font-weight: bold;
    background-color: #E3DFD6;
    border: 1px solid #000000;
    border-bottom: 0px;
    margin: 0px 5px 0px 0px;
    text-decoration: none;

    -moz-border-radius-topleft:         5px;
    -moz-border-radius-topright:        5px;
    -webkit-border-top-left-radius:     5px;
    -webkit-border-top-right-radius:    5px;
    border-top-left-radius:             5px;
    border-top-right-radius:            5px;
}

a.tab:hover
{
    color: #0000FF;
    background: #FFFFFF;
    border-bottom: 1px solid #000000;
}

a.tabx:hover
{
    color: #0000FF;
}

