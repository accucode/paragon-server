//******************************
//** task designer
//******************************


.taskDesignerSteps
.taskDesignerItems
.taskDesignerPreview
    box-sizing:         border-box
    margin:             0 0 0 0
    position:           absolute


/* The main center section where fields are displayed and edited. */
.taskDesignerAlertBox
    background-color:   #fd8
    border:             2px solid #fa0


//******************************
//** preview left column
//******************************


.taskDesigner-previewLeftColumn
    border-right:       1px solid #888


.taskDesigner-previewHeader
    box-sizing:         border-box
    height:             50px
    background-color:   #f8f8f8
    font:               bold 1.6rem $fontFamily
    color:              #000
    white-space:        nowrap
    border-bottom:      1px solid #888
    padding:            10px


.taskDesigner-previewFooter
    padding:            10px
    box-sizing:         border-box
    height:             50px
    background-color:   #f8f8f8
    border-top:         1px solid #888


.taskDesigner-previewFooter
    padding:            10px
    box-sizing:         border-box
    height:             50px
    background-color:   #f8f8f8
    border-top:         1px solid #888


//******************************
//** preview right column
//******************************


.taskDesigner-previewRightColumn
    width:              200px


.taskDesigner-previewTopView
    padding:            5px
    border-bottom:      1px solid #888


.taskDesigner-previewBottomView
    padding:            5px


//******************************
//** responsive design
//******************************


@media (orientation: landscape)
    .taskDesignerTasks
        top:            0
        height:         50%
        left:           0
        width:          30%

    .taskDesignerSteps
        top:            0
        height:         100%
        left:           0
        width:          30%

    .taskDesignerItems
        top:            50%
        bottom:         0
        left:           0
        width:          30%
        margin-top:     20px

    .taskDesignerPreview
        top:            0
        bottom:         0
        left:           30%
        right:          0
        margin-left:    20px


@media (orientation: portrait)
    .taskDesignerSteps
        top:            0
        height:         30%
        left:           0
        width:          100%

    .taskDesignerItems
        top:            0
        height:         30%
        left:           50%
        right:          0
        margin-left:    20px

    .taskDesignerPreview
        top:            30%
        bottom:         0
        left:           0
        right:          0
        margin-top:     20px
