/*******************************************************************
 ** help wrapper
 *******************************************************************/

.helpWrapper
{
    position: relative;
    display:  inline-block;
}

/*******************************************************************
 ** text
 *******************************************************************/

/**
 * Used to style the star/asterisk that marks required fields.
 */
.requiredStar
{
    font: bold 1.3rem $fontFamily;
    color: red;
    display: inline;
    vertical-align: middle;
    padding-left: 5px;
}

.fieldText
{
    position:       relative;
    display:        inline-block;
    min-width:      3em;
    min-height:     1.1em;
    padding-left:   0.6rem;
    padding-right:  0.8rem;
    padding-top:    0.2rem;
    padding-bottom: 0.2rem;
    background:     rgba(0, 0, 0, 0.06);
}

.alertText
    font-weight:    bold
    color:          red

.warningText
{
    font: bold 1.5rem $fontFamily;
    color: red;
}

.text
{
    font: normal 1.2rem $fontFamily;
    color: #000;
}

.smallText
{
    font: normal 1rem $fontFamily;
    color: #000;
}

.importantText
{
    font: bold 1.2rem $fontFamily;
    color: #f00;
}

.label
{
    font: bold 1.5rem $fontFamily;
    color: #000;
    white-space: nowrap;
}

.fieldValue
{
    font: normal 1.5rem $fontFamily;
    border: 1px solid #ddd;
    padding: 2px;
}


/*******************************************************************
 ** dragging
 *******************************************************************/

.dragHandle
{
    box-sizing: border-box;
    width:   15px;
    height:  16px;

    cursor: move;
    display: inline-block;
    background: transparent url("../image/drag.png") no-repeat center;
    border: 1px solid transparent;
}


/*******************************************************************
 ** block ui
 *******************************************************************/

.blockMsg
{
    background-color: #ffa;
    border: 4px solid #f00;
    font: bold 1.2rem $fontFamily;

    padding: 10px;
    padding-left: 35px;

    border-radius:          5px;

    background-image:       url(../image/blockSpinner.gif);
    background-repeat:      no-repeat;
    background-position:    10px center;

    cursor: wait;
}
