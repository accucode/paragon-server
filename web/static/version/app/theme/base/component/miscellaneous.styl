//******************************
//** help wrapper
//******************************


.helpWrapper
    position:   relative
    display:    inline-block


//******************************
//** text
//******************************


.loginAppName
    color:              #17b
    font:               bold 10.0rem $fontFamily
    white-space:        nowrap
    overflow:           hidden
    margin-left:        5rem
    

.titleText
    font:               bold 1.6rem $fontFamily
    white-space:        nowrap
    overflow:           hidden


.subtitleText
    font:               italic 1.2rem $fontFamily
    white-space:        nowrap
    overflow:           hidden


/**
 * Used to style the star/asterisk that marks required fields.
 */
.requiredStar
    font:           bold 1.3rem $fontFamily
    color:          red
    display:        inline
    vertical-align: middle
    padding-left:   5px


.fieldText
    position:       relative
    display:        inline-block
    box-sizing:     border-box
    min-width:      5rem
    min-height:     1.8rem
    font:           normal 1.5rem $fontFamily
    padding-left:   0.6rem
    padding-right:  0.8rem
    padding-top:    0rem
    padding-bottom: 0rem
    background:     rgba(0, 0, 0, 0.06)
    overflow:       hidden

.alertText
    font-weight:    bold
    color:          red


.warningText
    font:           bold 1.5rem $fontFamily
    color:          red


.text
    font:           normal 1.2rem $fontFamily
    color:          #000


.smallText
    font:           normal 1rem $fontFamily
    color:          #000


.importantText
    font:           bold 1.2rem $fontFamily
    color:          #f00


.label
    font:           bold 1.5rem $fontFamily
    color:          #000
    white-space:    nowrap


.fieldValue
    font:           normal 1.5rem $fontFamily
    border:         1px solid #ddd
    padding:        2px


//******************************
//** dragging
//******************************


.dragHandle
    box-sizing: border-box
    width:      15px
    height:     16px

    cursor:     move
    display:    inline-block
    background: transparent url("../image/drag.png") no-repeat center
    border:     1px solid transparent


//******************************
//** block ui
//******************************


.blockMsg
    background-color:   #ffa
    border:             4px solid #f00
    font:               bold 1.2rem $fontFamily

    padding:            10px
    padding-left:       35px

    border-radius:      5px

    background-image:   url(../image/blockSpinner.gif)
    background-repeat:  no-repeat
    background-position:10px center

    cursor: wait


//******************************
//** attachment image
//******************************


/**
 * Used to style the attachment images for in the crud builder.
 */
 .attachmentImage
    max-width:      100%
    max-height:     100%


//******************************
//** data table
//******************************


.dataTable
    border-collapse:    0
    border-spacing:     0


.dataTable tr:nth-child(odd)
    background-color:   #f8f8f8


.dataTable tr:nth-child(even)
    background-color:   #f0f0f0


.dataTable th
    padding:            5px
    font:               bold 1.5rem $fontFamily
    border:             1px solid #ccc
    white-space:        nowrap
    background-color:   lighten(#fb0, 90%)


.dataTable td
    padding:            5px
    border:             1px solid #ccc


.dataTable .xtd:first-child
    white-space:        nowrap
    font-weight:        bold


.dataTable .rowHeader
    white-space:        nowrap
    font-weight:        bold



//******************************
//** other
//******************************

.alternatingGrays > *
    border-bottom: 1px solid #ccc

.alternatingGrays > *:nth-child(odd)
    background-color: #eee

.alternatingGrays > *:nth-child(even)
    background-color: #ddd
