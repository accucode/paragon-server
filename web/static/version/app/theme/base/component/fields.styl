/*****************************
 ** text line
 *****************************/

.textField
{
    position: relative;
}

.textField input
{
    box-sizing: border-box;
    width:      100%;
    margin:     0;
    padding:    5px;

    font:       normal 1.5rem $fontFamily;
    border:     1px solid #aaa;
}

.textField:hover input
{
    box-shadow:     inset 1px 1px 1px rgba(0, 0, 0, 0.2);
}

.textField:focus input
{
    background:     $fieldBackgroundColor;
    border:         1px solid #48f;
    box-shadow:     inset 1px 1px 1px rgba(0, 0, 0, 0.2);
}

.textField-editable input
{
    background:     $fieldBackgroundColor;
}

.textField-readonly input
{
    background:     #ccc;
}


/*******************************************************************
 ** text area
 *******************************************************************/

.textArea
{
    position: relative;
}

.textArea textarea
{
    box-sizing:     border-box;
    flex-grow:      1;
    flex-shrink:    1;
    margin:         0;
    padding:        5px;

    font: normal 1.5rem $fontFamily;

    border-top:     1px solid #999;
    border-left:    1px solid #999;
    border-bottom:  1px solid #bbb;
    border-right:   1px solid #bbb;

    transition:     border 100ms;
}

.textArea:hover textarea
{
    box-shadow: inset 1px 1px 1px rgba(0, 0, 0, 0.2);
}

.textArea:focus textarea
{
    background-color: $fieldBackgroundColor;
    border: 1px solid #48f;
    box-shadow: inset 1px 1px 1px rgba(0, 0, 0, 0.2);
}

.textArea-editable textarea
{
    background-color: $fieldBackgroundColor;
}

.textArea-readonly textarea
{
    background-color: #ccc;
}

/*****************************
 ** auto-complete
 *****************************/

.autoCompleteField
{
    position:       relative;
}

.autoCompleteField input
{
    box-sizing:     border-box;
    width:          100%;
    margin:         0;
    padding:        5px;

    font:           normal 1.5rem $fontFamily;

    border:         1px solid #aaa;
}

.autoCompleteField:hover input
{
    box-shadow: inset 1px 1px 1px rgba(0, 0, 0, 0.2);
}

.autoCompleteField:focus input
{
    background-color: $fieldBackgroundColor;
    box-shadow: inset 1px 1px 1px rgba(0, 0, 0, 0.2);
}

.autoCompleteField-editable input
{
    background-color: $fieldBackgroundColor;
}

.autoCompleteField-readonly input
{
    background-color: #ccc;
}

ul.ui-autocomplete
{
    background-color: $fieldBackgroundColor;

    border-top:    none;
    border-left:   1px solid #999;
    border-bottom: 1px solid #bbb;
    border-right:  1px solid #bbb;
}

/*****************************
 ** checkbox field
 *****************************/

.checkboxField
{
    position: relative;
    padding-right: 5px;
    display: inline-block;
}

.checkboxField input
{
    padding: 0;
    margin:  0;
}

.checkboxField-enabled input
{
    background-color: $fieldBackgroundColor;
}

.checkboxField-disabled input
{
    background-color: #444;
}


